extends layout


block left
    include partials/sidebar-left-landing


block content
    div(class= "mt-5")
        h2 Login
        form(
            action= "/login",
             method= "post"
             )
                div(class= "mb-3")
                    label(for="name") Nutzername
                    input(
                        class= "form-control",
                        type= "text",
                        name= "name",
                        id= "name",
                        placeholder= "Nutzername eingeben"
                    )
                div(class= "mb-3")
                    label(for= "password") Password
                    input(
                    class= "form-control",
                    type= "password",
                    name= "password",
                    id= "password",
                    placeholder= "Passwort eingeben"
                    )
                button(
                    class= "btn btn-primary",
                    type= "submit"
                    ) Login

