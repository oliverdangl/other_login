doctype html
html
    head
        meta(charset="utf-8")

        //For responsive representation
        meta(name="viewport" content="width=device-width, initial-scale=1")

        //Bootstrap 5 CSS include
        link(
            rel="stylesheet",
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css",
            integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM",
            crossorigin="anonymous"
        )

        //Include for css file
        link(rel="stylesheet" href="/css/style.css")


        //Bootstrap icons
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css")
        title OTHer

    body
        //Container taking full width
        .layout-container
            //Row in bootstrap-grid holding the 3 main columns
            .layout-row
                //Left column of navigation (25% of site) including 2 links for dashboard and users
                .sidebar-left
                    //Other logo with padding to start
                    .logo-wrapper
                        a(href="/dashboard")
                            //Style="height: 2em; width: auto;" instead css possible
                            img(src="/img/logo.svg"
                                alt="OTHer Logo"
                                class="logo"
                            )

                    nav.navigation
                        a(href="/dashboard"
                            class= currentPath === "/dashboard" ? "nav-link active": "nav-link")

                            //House icon
                            i(class="bi bi-house-door-fill icon")
                            span Startseite
                        a(href="/users"
                            class= currentPath === "/users" ? "nav-link active": "nav-link")

                            //People icon
                            i(class="bi bi-people-fill icon")
                            span Nutzer

                //Middle column taking 50% of site with place holder of child elements
                .main-content
                    block content

                //Right column (25% width) containing searchbar
                .sidebar-right
                    //Padding around 1rem
                    .search-wrapper
                        //Input group for icon + input
                        .search-group
                            //Search icon (magnifying lens)
                            span.search-icon
                                i(class="bi bi-search")
                            //Searchbar input field
                            input(type="text"
                                  placeholder="Other suchen..."
                                  class="search-input"
                                  )