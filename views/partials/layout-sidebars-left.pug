//-Other logo with padding to start
div(class= "d-flex justify-content-start ps-3 pt-4")
    a(href= "/dashboard")
        img(
            class= "img-fluid",
            src= "/img/logo.svg",
            alt= "OTHer Logo",
            height= "auto",
            width= "32"
        )
div(class= "mt-3")
    //-Navigation bar including clickable links
        //div(class= "d-flex align-items-center gap-2 text-dark fw-bold")
    nav(class= "nav flex-column ms-3")
        //-Link to dashboard thick when /dashboard
        a(
            href= "/dashboard",
            class= (currentPath === "/dashboard"
                    ? "nav-link d-flex text-dark fw-bold ps-0"
                    : "nav-link d-flex text-dark ps-0"
            )
        )
            //-House icon
            i(class= "bi bi-house-door-fill me-2 pe-4")
            span(class= "fs-5") Startseite
        //-Link to users thick when /users
        a(
            href="/users",
            class= (currentPath === "/users"
                    ? "nav-link d-flex text-dark fw-bold ps-0"
                    : "nav-link d-flex text-dark ps-0"
            )
        )
            //-People icon
            i(class= "bi bi-people-fill me-2 pe-4")
            span(class= "fs-5") Nutzer